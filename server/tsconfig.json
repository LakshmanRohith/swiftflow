// path: server/tsconfig.json
{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  // By specifying the include array, we tell TypeScript exactly which files to compile,
  // which resolves the rootDir issue.
  "include": ["src/**/*.ts", "prisma/seed.ts"],
  "exclude": ["node_modules"]
}
